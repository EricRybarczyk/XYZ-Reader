<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ArticleListItem" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="ArticleListItemDateline" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subduedTextColor</item>
    </style>

    <style name="ArticleBody">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subduedTextColor</item>
    </style>
</resources>
