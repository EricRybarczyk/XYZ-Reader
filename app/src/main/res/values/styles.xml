<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ArticleListItem" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/article_title_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="ArticleListItemDateline" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/article_dateline_text_size</item>
        <item name="android:textColor">@color/subduedTextColor</item>
    </style>

    <style name="ArticleHeadline" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="ArticleByline" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/detail_byline_text_size</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ArticleBody" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subduedTextColor</item>
    </style>
</resources>
